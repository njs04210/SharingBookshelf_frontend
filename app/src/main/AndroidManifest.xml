<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sharingbookshelf">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcherr"
        android:label="아이북쉐어"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcherr_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.BookInfoPopupActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".Activities.SelfAddBookPopupActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".Activities.BarcodeActivity" />
        <activity
            android:name=".Activities.ZxingActivity"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Activities.HomeActivity"
            android:theme="@style/StatusBar" />

        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Activities.SelectAgeAreaActivity"
            android:theme="@style/StatusBar" />
        <activity
            android:name=".Activities.WebViewActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Activities.LeaveIdActivity" />
        <activity android:name=".Activities.LikeListActivity" />
    </application>

</manifest>