<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/font_main"
                android:text="태그 설정"
                android:textColor="@color/colorPrimary_2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_apply"
                style="@style/BookReportButton_2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorPrimary_2"
                android:fontFamily="@font/font_main"
                android:text="적용"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/border_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear_category"
            android:background="#66bdbdbd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_main"
                    android:text="나이"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/selectedAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/font_main"
                    android:gravity="right"
                    android:text="1세"
                    android:textColor="#212121" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacing="0dp"
                app:chipSpacingHorizontal="1dp"
                app:chipSpacingVertical="1dp"
                app:itemSpacing="0dp"
                app:lineSpacing="0dp"
                app:selectionRequired="true"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/age_1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:text="1세"
                    android:textAlignment="center"
                    android:textColor="@color/othershelf_category_chip"
                    android:textSize="13sp"
                    app:chipBackgroundColor="@null"
                    app:chipCornerRadius="0dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStrokeColor="@color/othershelf_category_chip"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/age_2"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2세"
                    android:textAlignment="center"
