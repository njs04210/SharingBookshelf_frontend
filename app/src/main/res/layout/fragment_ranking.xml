<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.RankingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="책 순위"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="right">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:chipSpacingHorizontal="20dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_age"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이순" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_sex"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별순" />

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/iv_1stbook"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@color/purple_200" />

        <ImageView
            android:id="@+id/iv_2ndbook"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/iv_1stbook"
            android:background="@color/purple_200" />

        <ImageView
            android:id="@+id/iv_3rdbook"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/iv_1stbook"
            android:background="@color/purple_200" />

        <TextView
            android:id="@+id/iv_1stplatform"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_below="@+id/iv_1stbook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bin_blue2"
            android:text="1st"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/iv_2ndplatform"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/iv_2ndbook"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/iv_1stplatform"
            android:background="@drawable/bin_blue2"
            android:text="2nd"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/iv_3rdplatform"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv_3rdbook"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_1stplatform"
            android:background="@drawable/bin_blue2"
            android:text="3rd"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/whiteCardColor"
        android:layout_marginTop="25dp"
        android:elevation="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>