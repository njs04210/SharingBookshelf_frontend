<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.RankingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="책 순위"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="right">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:chipSpacingHorizontal="10dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_age"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이순" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_sex"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별순" />

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_below="@+id/iv_1stbook"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/ranking_platform"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ranking_crown"/>

        <ImageView
            android:id="@+id/iv_1stbook"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="140dp"
            android:background="@color/purple_200" />

        <ImageView
            android:id="@+id/iv_2ndbook"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="115dp"
            android:layout_toLeftOf="@+id/iv_1stbook"
            android:background="@color/purple_200" />

        <ImageView
            android:id="@+id/iv_3rdbook"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="90dp"
            android:layout_toRightOf="@+id/iv_1stbook"
            android:background="@color/purple_200" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/whiteCardColor"
        android:layout_marginTop="23dp"
        android:elevation="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarFadeDuration="0">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>