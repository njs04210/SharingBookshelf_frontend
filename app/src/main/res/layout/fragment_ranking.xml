<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.RankingFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary_2"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_main"
            android:text="Ranking"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:tabIndicatorColor="@color/colorPrimary_2"
        app:tabSelectedTextColor="@color/colorPrimary_2"
        android:background="@color/loginBkColor">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_main"
            android:text="좋아요" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_main"
            android:text="책바구니" />

    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_main"
                android:text="회원들이 직접 뽑은"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/tv_rankingtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/font_main"
                android:text="좋아요가 가장 많은 책"
                android:textStyle="bold"
                android:textSize="25dp"/>

           <TextView
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:layout_marginLeft="45dp"
               android:layout_marginTop="155dp"
               android:text="1등 "
               android:gravity="center"
               android:fontFamily="@font/font_main"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:background="@drawable/hlafcircle" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="2등 "
                android:gravity="center"
                android:fontFamily="@font/font_main"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/hlafcircle" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="155dp"
                android:text="3등 "
                android:gravity="center"
                android:fontFamily="@font/font_main"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/hlafcircle" />

            <ImageView
                android:id="@+id/iv_1stbook"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="40dp"
                android:background="@color/purple_200" />

            <ImageView
                android:id="@+id/iv_2ndbook"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="40dp"
                android:background="@color/purple_200" />

            <ImageView
                android:id="@+id/iv_3rdbook"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="40dp"
                android:background="@color/purple_200" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteCardColor"
            android:elevation="5dp"
            android:gravity="center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ranking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarFadeDuration="0">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>