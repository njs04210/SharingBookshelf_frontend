<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ChattingFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary_2"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_main"
            android:text="5월의 독서짱"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@color/white">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 1st -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp">

                    <!-- 나이, 성별 이름 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_crown"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_1stprofile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/icon_logo"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_1st_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="나이"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / "
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:id="@+id/tv_1st_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="성별"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_1st_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="닉네임"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 어린이"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 메모칸 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/border_all"
                        android:layout_marginLeft="30dp"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5월의 독서짱이 된 소감"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/font_main"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="우왕"
                            android:textSize="10dp"
                            android:fontFamily="@font/font_main"/>

                    </LinearLayout>

                </LinearLayout>
                <!-- end 1st -->

                <!-- 2nd -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp">

                    <!-- 나이, 성별 이름 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_crown"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_2nd_profile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/icon_logo"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_2nd_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="나이"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / "
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:id="@+id/tv_2nd_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="성별"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_2nd_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="닉네임"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 어린이"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 메모칸 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/border_all"
                        android:layout_marginLeft="30dp"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5월의 독서짱이 된 소감"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/font_main"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="우왕"
                            android:textSize="10dp"
                            android:fontFamily="@font/font_main"/>

                    </LinearLayout>

                </LinearLayout>
                <!-- end 2nd -->

                <!-- 3rd -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="40dp">

                    <!-- 나이, 성별 이름 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_crown"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_3rd_nickname"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/icon_logo"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_3rd_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="나이"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / "
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:id="@+id/tv_3rd_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="성별"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_3rd_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="닉네임"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 어린이"
                                android:textSize="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/font_main"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 메모칸 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/border_all"
                        android:layout_marginLeft="30dp"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5월의 독서짱이 된 소감"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/font_main"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="우왕"
                            android:textSize="10dp"
                            android:fontFamily="@font/font_main"/>

                    </LinearLayout>

                </LinearLayout>
                <!-- end 3rd -->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>