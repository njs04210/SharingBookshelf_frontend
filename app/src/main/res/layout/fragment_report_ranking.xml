                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:src="@drawable/row_bookshelf2" />

        <FrameLayout
            android:layout_width="wrap_content"
