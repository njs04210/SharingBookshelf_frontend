<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor"
    android:elevation="5dp"
    app:cardCornerRadius="@dimen/loginCardRadius">
    <LinearLayout
        style="@style/linearParent"
        android:layout_height="530dp"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/profileView"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_logo" />
            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profileView"
                android:fontFamily="@font/font_main"
                android:gravity="center"
                android:text="프로필 사진을\n등록해보세요!"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary_2"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/nickname"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="10dp"
                android:text="닉네임"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary_2"
                android:textSize="15dp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputnickname"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/nickname"
                android:background="@android:color/transparent"
                app:boxBackgroundColor="@android:color/transparent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/check_nickname"
                style="@style/parent"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/textInputnickname"
                android:background="@color/colorPrimary_2"
                android:text="확인"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/text_address"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="거주 지역"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary_2"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_address"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="검색버튼 Click!"
                android:textAlignment="center"
                android:textColor="#373a3c"
                android:textSize="15sp" />
            <Button
                android:id="@+id/reg_address"
                style="@style/parent"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_address"
                android:background="@color/colorPrimary_2"
                android:text="검색"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/childage"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="자녀 나이"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary_2"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/reg_childAge"
                style="@style/SpinnerStyle1"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/childage"
                android:background="@drawable/spinner_background"
                android:scrollbarThumbVertical="@drawable/scrollbar"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:verticalScrollbarPosition="right" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/childSex"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="자녀 성별"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary_2"
                android:textSize="15dp"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/radioGroup_sex"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/childSex"
                android:checkedButton="@+id/radio_boy"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary_2"
                    android:fontFamily="@font/font_main"
                    android:text="남자"
                    android:textSize="15sp" />
                <RadioButton
                    android:id="@+id/radio_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary_2"
                    android:fontFamily="@font/font_main"
                    android:text="여자"
                    android:textSize="15sp" />
            </RadioGroup>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_register"
            style="@style/loginButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="등록" />
    </LinearLayout>
</androidx.cardview.widget.CardView>